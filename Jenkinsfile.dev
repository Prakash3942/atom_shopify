pipeline {
    agent any
    
    stages {
        stage('Preparation'){
            steps{
                echo 'Starting Preparation Phase'
                sh 'sudo n 20.9.0'
                sh 'yarn'
                echo 'Preparation Done'
            }
        }
        stage('Build'){
            steps {
                echo 'Starting Build Phase'
                sh 'yarn build'
                echo 'Build Done'
            }
        }
        stage('Deploy'){
            steps {
                echo 'Starting Deploy Phase'
                withCredentials([sshUserPrivateKey(credentialsId: 'ssh_pk',keyFileVariable: 'sshKey')]){
                    
                    sh '''
                        mkdir -p /var/lib/jenkins/.ssh
                        ssh-keyscan 3.6.127.221 >> /var/lib/jenkins/.ssh/known_hosts


                        ssh -i $sshKey ubuntu@3.6.127.221 "mkdir -p /home/ubuntu/deploy/website"
                        ssh -i $sshKey ubuntu@3.6.127.221 "mkdir -p /home/ubuntu/deploy/website/src"
                        scp -i $sshKey -r .next ubuntu@3.6.127.221:/home/ubuntu/deploy/website
                        scp -i $sshKey -r public ubuntu@3.6.127.221:/home/ubuntu/deploy/website

                        scp -i $sshKey package.json ubuntu@3.6.127.221:/home/ubuntu/deploy/website
                        scp -i $sshKey dev.json ubuntu@3.6.127.221:/home/ubuntu/deploy/website
                        scp -i $sshKey next.config.js ubuntu@3.6.127.221:/home/ubuntu/deploy/website
                        scp -i $sshKey tsconfig.json ubuntu@3.6.127.221:/home/ubuntu/deploy/website

                        ssh -i $sshKey ubuntu@3.6.127.221 "cd /home/ubuntu/deploy/website/ && sudo n 20.9.0 && yarn"

                        ssh -i $sshKey ubuntu@3.6.127.221 "cd /home/ubuntu/deploy/website/ && pm2 start dev.json"

                    '''

                }
            }
        }
    }
    post{
        success{
            emailext attachLog: true, body: "${env.JOB_NAME} Build Number ${env.BUILD_NUMBER} by ${env.CHANGE_AUTHOR}  has successfully completed.", recipientProviders: [buildUser()], subject: "Success: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'", to: 'guru@smartters.in'
        }
        unsuccessful{
            emailext attachLog: true, body: "${env.JOB_NAME} Build Number ${env.BUILD_NUMBER} by ${env.CHANGE_AUTHOR}  has error. Please check the log and resolve", recipientProviders: [buildUser()], subject: "${currentBuild.currentResult}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'", to: 'guru@smartters.in'
        }
    }

}
